<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/center"
        android:layout_width="4dp"
        android:layout_height="28dp"
        android:background="@color/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/center_left"
        app:layout_constraintRight_toLeftOf="@+id/center_right" />

    <View
        android:id="@+id/center_right"
        android:layout_width="2dp"
        android:layout_height="14dp"
        android:background="@color/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/center"
        app:layout_constraintRight_toLeftOf="@+id/right" />

    <View
        android:id="@+id/right"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:background="@color/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/center_right"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/center_left"
        android:layout_width="2dp"
        android:layout_height="14dp"
        android:background="@color/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/left"
        app:layout_constraintRight_toLeftOf="@id/center" />

    <View
        android:id="@+id/left"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:background="@color/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/center_left" />
</merge>